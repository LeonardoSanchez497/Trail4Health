@model Trail4Healthtest.Models.EstadoTrilho

@{
    ViewData["Title"] = "Edit";
}

<div class="bread_area">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li><a href="/">Trail4Health</a></li>
                    <li class="active">Editar estado do trilho</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <section class="page col-sm-12">
            <div class="row">
                <div class="col-lg-12">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="EstadoTrilhoId" />
                        <div class="form-group">
                            <label asp-for="TrilhoId" class="control-label">Nome do Trilho</label>
                            <select asp-for="TrilhoId" class="form-control" asp-items="ViewBag.TrilhoId"></select>
                            <span asp-validation-for="TrilhoId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Causa" class="control-label">Causa</label>
                            <input asp-for="Causa" class="form-control" />
                            <span asp-validation-for="Causa" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Datainicio" class="control-label">Data de Início</label>
                            <input asp-for="Datainicio" class="form-control" />
                            <span asp-validation-for="Datainicio" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Datafim" class="control-label">Data prevista de fim</label>
                            <input asp-for="Datafim" class="form-control" />
                            <span asp-validation-for="Datafim" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="EstadoId" class="control-label">Estado</label>
                            <select asp-for="EstadoId" class="form-control" asp-items="ViewBag.EstadoId"></select>
                            <span asp-validation-for="EstadoId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Atualizar" class="btn btn-success" /> | <button class="btn btn-info"><a asp-action="Index">Voltar à lista</a></button>
                        </div>
                    </form>
                </div>
            </div>
            </section>
        </div>
    </div>
            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
