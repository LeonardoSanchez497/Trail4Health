@model IEnumerable<Trail4Healthtest.Models.EstadoTrilho>

@{
    ViewData["Title"] = "Index";
}

<div class="bread_area">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li><a href="/">Trail4Health</a></li>
                    <li class="active">Estados dos trilhos</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <section class="page col-sm-12">
            <div class="row">
                <div class="col-lg-12">
@if (User.IsInRole("Administrador"))
{
                    <button class="btn btn-info">
                        <a asp-action="Create">Criar Novo estado do trilho</a>
                    </button>}
                    <br />
                    <br />
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>
                                    Nome do trilho
                                </th>
                                <th>
                                    Causa
                                </th>
                                
                                <th>
                                   Data de início
                                </th>
                                <th>
                                    Data prevista do fim
                                </th>
                                <th>
                                   Estado
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Trilho.Nometrilho)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Causa)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Datainicio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Datafim)
                                </td>
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Estado.Nomeestado)
                                </td>
                                <td>
@if (User.IsInRole("Administrador"))
{
                                    <button class="btn btn-toolbar">
                                        <a asp-action="Edit" asp-route-id="@item.EstadoTrilhoId">Editar</a>
                                    </button> }
                                    <button class="btn btn-default">
                                        <a asp-action="Details" asp-route-id="@item.EstadoTrilhoId">Detalhes</a>
                                    </button> 
@if (User.IsInRole("Administrador"))
{
                                    <button class="btn btn-danger">
                                        <a asp-action="Delete" asp-route-id="@item.EstadoTrilhoId">Apagar</a>
                                    </button>}
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
