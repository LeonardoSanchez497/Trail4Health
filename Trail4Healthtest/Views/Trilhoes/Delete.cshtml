@model Trail4Healthtest.Models.Trilho

@{
    ViewData["Title"] = "Delete";
}


<div class="bread_area">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li><a href="/">Trail4Health</a></li>
                    <li class="active">Apagar Trilho</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <section class="page col-sm-12">
            <div class="row">
                <div class="col-lg-12">
                    <h3>Tem a certeza que pretende apagar este registo?</h3>
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                Nome do trilho
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Nometrilho)
                            </dd>
                            <dt>
                              Distância a percorrer
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Distanciaapercorrer)
                            </dd>
                            <dt>
                                Duração Média
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Duracaomedia)
                            </dd>
                            <dt>
                               Local de fim
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Locfim)
                            </dd>
                            <dt>
                                Local de Início
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Locinicio)
                            </dd>
                            <dt>
                                Ativo?
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Ativo)
                            </dd>
                            <dt>
                                Newsletter Ativa?
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.NewsletterAtiva)
                            </dd>
                            <dt>
                                Inclinação
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.CoddesnivelNavigation.Nomedesnivel)
                            </dd>
                            <dt>
                               Dificuldade
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.CoddificuldadeNavigation.Nomedificuldade)
                            </dd>
                            <dt>
                               Melhor época para fazer o trilho
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.CodepocaaconselhdaNavigation.Nomeepoca)
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="TrilhoId" />
                            <input type="submit" value="Apagar" class="btn btn-danger" />
                            | <button class="btn btn-info">
                                <a asp-action="Index">Voltar à lista</a>
                            </button>
                        </form>
                    </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
