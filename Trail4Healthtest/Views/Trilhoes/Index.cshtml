@model IEnumerable<Trail4Healthtest.Models.Trilho>

@{
    ViewData["Title"] = "Index";
}

<div class="bread_area">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li><a href="/">Trail4Health</a></li>
                    <li class="active">Trilhos</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <section class="page col-sm-12">
            <div class="row">
                <div class="col-lg-12">
@if (User.IsInRole("Administrador"))
{
                    <button class="btn btn-info">
                        <a asp-action="Create">Criar Novo Trilho</a>
                    </button>}
                    <br />
                    <br />
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>
                                    Nome do trilho
                                </th>
                                <th>
                                    Distância a percorrer
                                </th>
                                <th>
                                    Duração média
                                </th>
                                <th>
                                    Local de fim
                                </th>
                                <th>
                                    Local de Início
                                </th>
                                <th>
                                    Ativo?
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nometrilho)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Distanciaapercorrer)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Duracaomedia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Locfim)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Locinicio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ativo)
                                </td>
                                <td>@if (User.IsInRole("Administrador"))
                                {
                                    <button class="btn btn-toolbar">
                                        <a asp-action="Edit" asp-route-id="@item.TrilhoId">Editar</a>
                                    </button> }
                                    
                                    <button class="btn btn-default">
                                        <a asp-action="Details" asp-route-id="@item.TrilhoId">Detalhes</a>
                                    </button>
@if (User.IsInRole("Administrador"))
{
                                    <button class="btn btn-danger">
                                        <a asp-action="Delete" asp-route-id="@item.TrilhoId">Apagar</a>
                                    </button>}
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
