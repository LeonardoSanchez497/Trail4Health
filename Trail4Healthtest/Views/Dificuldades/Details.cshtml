@model Trail4Healthtest.Models.Dificuldade

@{
    ViewData["Title"] = "Details";
}
<div class="bread_area">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li><a href="/">Trail4Health</a></li>
                    <li class="active">Dificuldade</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <section class="page col-sm-12">
            <div class="row">
                <div class="col-lg-12">
                    <dl class="dl-horizontal">
                        <dt>
                            Nome da dificuldade
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Nomedificuldade)
                        </dd>
                        <dt>
                            Observações
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Observacoes)
                        </dd>
                    </dl>
                </div>
                <div class="form-group">
@if (User.IsInRole("Administrador"))
{
                    <button class="btn btn-toolbar"><a asp-action="Edit" asp-route-id="@Model.DificuldadeId">Editar</a></button>}
                    <button class="btn btn-info"><a asp-action="Index">Voltar à lista</a></button>
                </div>
            </div>
        </section>
    </div>
</div>
