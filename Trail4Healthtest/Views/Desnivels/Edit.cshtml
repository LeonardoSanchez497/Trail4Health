@model Trail4Healthtest.Models.Desnivel

@{
    ViewData["Title"] = "Edit";
}
<div class="bread_area">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li><a href="/">Trail4Health</a></li>
                    <li class="active">Editar Desnível</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <section class="page col-sm-12">
            <div class="row">
                <div class="col-lg-12">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="DesnivelId" />
                        <div class="form-group">
                            <label asp-for="Nomedesnivel" class="control-label">Nome do Desnível</label>
                            <input asp-for="Nomedesnivel" class="form-control" />
                            <span asp-validation-for="Nomedesnivel" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Observacoes" class="control-label">Observações</label>
                            <input asp-for="Observacoes" class="form-control" />
                            <span asp-validation-for="Observacoes" class="text-danger"></span>
                        </div>
                            <div class="form-group">
                                <input type="submit" value="Atualizar" class="btn btn-success" /> | <button class="btn btn-info"><a asp-action="Index">Voltar à lista</a></button>
                            </div>
                    </form>
                </div>
            </div>
            </section>
        </div>
    </div>


            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
