@model IEnumerable<Trail4Healthtest.Models.EtapaTrilho>

@{
    ViewData["Title"] = "Index";
}

<div class="bread_area">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li><a href="/">Trail4Health</a></li>
                    <li class="active">Etapas</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <section class="page col-sm-12">
            <div class="row">
                <div class="col-lg-12">
                    @if (User.IsInRole("Administrador"))
                    {
                        <button class="btn btn-info">
                            <a asp-action="Create">Criar Nova Etapa</a>
                        </button>}
                    <br />
                    <br />
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Trilho)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ativo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OrdemEtapa)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Etapa)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Trilho.Nometrilho)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ativo)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Etapa.Nomeetapa)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrdemEtapa)
                                    </td>
                                    <td>
                                        @if (User.IsInRole("Administrador"))
                                        {

                                            <button class="btn btn-toolbar">
                                                <a asp-action="Edit" asp-route-id="@item.EtapatrilhoId">Editar</a>
                                            </button>
                                            <button class="btn btn-danger">
                                                <a asp-action="Delete" asp-route-id="@item.EtapatrilhoId">Apagar</a>
                                            </button>}
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>
