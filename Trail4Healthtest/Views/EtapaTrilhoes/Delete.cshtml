@model Trail4Healthtest.Models.EtapaTrilho

@{
    ViewData["Title"] = "Delete";
}

<div class="bread_area">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li><a href="/">Trail4Health</a></li>
                    <li class="active">Apagar comentário do trilho</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <section class="page col-sm-12">
            <div class="row">
                <div class="col-lg-12">
                    <h3>Tem a certeza que pretende apagar este registo?</h3>
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                Nome do Trilho
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Trilho.Nometrilho)
                            </dd>
                            <dt>
                                Etapa
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Etapa.Nomeetapa)
                            </dd>
                            <dt>
                                Etapa Ativa?
                            </dt>
                            <dd>
                                @if (@Html.DisplayTextFor(model => model.Ativo) == "True")
                                {
                                    <text>Sim</text>

                                }
                                else if (@Html.DisplayTextFor(model => model.Ativo) == "False")
                                {
                                    <text>Não</text>
                                }
                            </dd>
                            <dt>
                                Ordem da Etapa
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.OrdemEtapa)
                            </dd>


                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="EtapatrilhoId" />
                            <input type="submit" value="Apagar" class="btn btn-danger" />
                            | <button class="btn btn-info">
                                <a asp-action="Index">Voltar à lista</a>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
