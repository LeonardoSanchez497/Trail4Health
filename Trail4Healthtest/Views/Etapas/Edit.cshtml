@model Trail4Healthtest.Models.Etapa

@{
    ViewData["Title"] = "Edit";
}

<div class="bread_area">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li><a href="/">Trail4Health</a></li>
                    <li class="active">Editar etapa</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <section class="page col-sm-12">
            <div class="row">
                <div class="col-lg-12">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="EtapaId" />
                        <div class="form-group">
                            <label asp-for="Nomeetapa" class="control-label">Nome da Etapa</label>
                            <input asp-for="Nomeetapa" class="form-control" />
                            <span asp-validation-for="Nomeetapa" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Distancia" class="control-label">Distância - km</label>
                            <input asp-for="Distancia" class="form-control" />
                            <span asp-validation-for="Distancia" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Duracao" class="control-label">Duração</label>
                            <input asp-for="Duracao" class="form-control" />
                            <span asp-validation-for="Duracao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Geolocalizacao" class="control-label">Geo-Localização</label>
                            <input asp-for="Geolocalizacao" class="form-control" />
                            <span asp-validation-for="Geolocalizacao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Atualizar" class="btn btn-success" /> | <button class="btn btn-info"><a asp-action="Index">Voltar à lista</a></button>
                        </div>
                    </form>
                </div>
            </div>
            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
