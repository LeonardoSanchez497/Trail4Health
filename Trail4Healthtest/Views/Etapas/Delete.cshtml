@model Trail4Healthtest.Models.Etapa

@{
    ViewData["Title"] = "Delete";
}

<div class="bread_area">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li><a href="/">Trail4Health</a></li>
                    <li class="active">Apagar comentário do trilho</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <section class="page col-sm-12">
            <div class="row">
                <div class="col-lg-12">
                    <h3>Tem a certeza que pretende apagar este registo?</h3>
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                Nome da Etapa
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Nomeetapa)
                            </dd>
                            <dt>
                               Distância
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Distancia)
                            </dd>
                            <dt>
                               Duração
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Duracao)
                            </dd>
                            <dt>
                                Geo-Localização
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Geolocalizacao)
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="EtapaId" />
                            <input type="submit" value="Apagar" class="btn btn-danger" />
                            | <button class="btn btn-info">
                                <a asp-action="Index">Voltar à lista</a>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
