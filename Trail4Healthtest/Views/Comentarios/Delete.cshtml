@model Trail4Healthtest.Models.Comentarios

@{
    ViewData["Title"] = "Delete";
}

<div class="bread_area">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li><a href="/">Trail4Health</a></li>
                    <li class="active">Apagar comentário do trilho</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <section class="page col-sm-12">
            <div class="row">
                <div class="col-lg-12">
                    <h3>Tem a certeza que pretende apagar este registo?</h3>
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                Comentário
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Comentar)
                            </dd>
                            <dt>
                                Duração do Trilho
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.DuracaoTrilho)
                            </dd>
                            <dt>
                                Avaliação
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Avaliacao.Classificacao)
                            </dd>
                            <dt>
                                Nome Trilho
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Trilho.Nometrilho)
                            </dd>
                            <dt>
                                Turista
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Turista.Nome)
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="ComentarioId" />

                            <input type="submit" value="Apagar" class="btn btn-danger" />
                            | <button class="btn btn-info">
                                <a asp-action="Index">Voltar à lista</a>
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
