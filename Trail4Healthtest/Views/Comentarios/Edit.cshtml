@model Trail4Healthtest.Models.Comentarios

@{
    ViewData["Title"] = "Edit";
}

<div class="bread_area">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li><a href="/">Trail4Health</a></li>
                    <li class="active">Editar comentário do trilho</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <section class="page col-sm-12">
            <div class="row">
                <div class="col-lg-12">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ComentarioId" />
                        <div class="form-group">
                            <label asp-for="TrilhoId" class="control-label">Qual o trilho?</label>
                            <select asp-for="TrilhoId" class="form-control" asp-items="ViewBag.TrilhoId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="TuristaId" class="control-label">Qual é o seu nome?</label>
                            <select asp-for="TuristaId" class="form-control" asp-items="ViewBag.TuristaId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Comentar" class="control-label"></label>
                            <input asp-for="Comentar" class="form-control" />
                            <span asp-validation-for="Comentar" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DuracaoTrilho" class="control-label"></label>
                            <input asp-for="DuracaoTrilho" class="form-control" />
                            <span asp-validation-for="DuracaoTrilho" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AvaliacaoId" class="control-label">Qual a sua Avaliação?</label>
                            <select asp-for="AvaliacaoId" class="form-control" asp-items="ViewBag.AvaliacaoId"></select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Atualizar" class="btn btn-success" /> | <button class="btn btn-info"><a asp-action="Index">Voltar à lista</a></button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
