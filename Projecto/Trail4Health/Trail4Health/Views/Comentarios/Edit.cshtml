@model Trail4Healthtest.Models.Comentarios

@{
    ViewData["Title"] = "Edit";
}

<div class="bread_area">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li><a href="/">Trail4Health</a></li>
                    <li class="active">Editar comentário</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <section class="page col-sm-12">
            <h2 class="page-title">Comentar</h2>
            <div class="row">
                <div class="col-lg-10">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="comentarioId" />
                        <div class="form-group">
                            <label asp-for="turistaId" class="control-label">Id do turista</label>
                            <select asp-for="turistaId" class="form-control" asp-items="ViewBag.turistaId"></select>
                            <span asp-validation-for="turistaId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="trilhoId" class="control-label">Id do Trilho</label>
                            <input asp-for="trilhoId" class="form-control" />
                            <span asp-validation-for="trilhoId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="duracaoTrilho" class="control-label">Duração do trilho</label>
                            <input asp-for="duracaoTrilho" class="form-control" />
                            <span asp-validation-for="duracaoTrilho" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="avaliacao" class="control-label">Avaliação</label>
                            <input asp-for="avaliacao" class="form-control" />
                            <span asp-validation-for="avaliacao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="comentar" class="control-label">Comentar Trilho</label>
                            <input asp-for="comentar" class="form-control" />
                            <span asp-validation-for="comentar" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Atualizar" class="btn btn-success" /> | <button class="btn btn-default"><a asp-action="Index">Voltar à lista</a></button>
                        </div>
                    </form>
                </div>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
        </section>
    </div>
</div>
